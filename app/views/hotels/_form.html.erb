<div class = "row">

  <div class = "col-md-6">

    <h3>Previous user's hotel</h3>
    <%= form_for [@itinerary, @hotel] do |f| %>
      <div class = "form-group">
        <%= f.label :name %><br>
        <%= f.collection_select(:id, Hotel.all, :id, :name, :include_blank => true)%>
      </div>

      <div class = "form-group">
        <%= f.label :date %><br>
        <%= select_date Date.current %><br>
      </div>
      <div class="actions"><br>
        <%= f.submit class: "btn btn-primary" %>
      </div>
    <% end %>
  </div>
      


  <div class="col-md-6">  
    <h3>Add a new hotel</h3>
    <%= form_for [@itinerary, @hotel] do |f| %>

      <div class = "form-group">
        <%= f.label :name %><br>
        <%= f.text_field :name, class: "form-control"%><br>
      </div>
      <div class = "form-group">
        <%= f.label :date %><br>
        <%= f.date_field :date %><br>
      </div>
      <div class = "form-group">
        <%= f.label :location %><br>
        <%= f.text_field :location, class: "form-control"%><br>
      </div>
      <div class = "form-group">
        <%= f.label :review %><br>
        <%= f.text_field :review, class: "form-control" %><br>
      </div>

      <div class="actions"><br>
        <%= f.submit class: "btn btn-primary" %>
      </div>
    <% end %>
  </div>
</div>