<script>
 $(function() {
   $( "#sortable1, #sortable2" ).sortable({
     connectWith: ".connectedSortable",
     stop: function(event, ui) {
       var order = $(this).parent().children($('#sortable1')).sortable('toArray').toString();
       $.ajax({
         url: '/update_position',
         method: 'PUT',
         dataType: 'json',
         data: {
           data: order,
           itinerary_item_id: ui.item.prop('id')
         }
       })
     }
   });
 });
