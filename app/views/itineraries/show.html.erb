<p id="notice"><%= notice %></p>
<h1> My Itinerary for <%=@itinerary.location%> </h1>
<br><br>
<h3> <%= @itinerary.title %></h3><br>
Start Date: <%= @itinerary.start_date.strftime("%B %d, %Y")%><br>
End Date: <%= @itinerary.end_date.strftime("%B %d, %Y")%><br>
<h4>Flights: </h4><br>
<% @itinerary.flights.each do |flight| %>
  Airline: <%= flight.airline %><br>
  Date: <%= flight.date.strftime("%B %d, %Y") %><br>
  Origin: <%= flight.origin %><br>
  Destination: <%= flight.destination %><br>
  Review: <%= flight.review %><br>
  <% end %>

<br><br><br>

<h3>Add a flight</h3>
<%= form_for [@itinerary, @flight] do |f| %>
 <% if @flight.errors.any? %>
   <div id="error_explanation">
     <h2><%= pluralize(@flight.errors.count, "error") %> prohibited this itinerary from being saved:</h2>
     <ul>
     <% @flight.errors.full_messages.each do |message| %>
       <li><%= message %></li>
     <% end %>
     </ul>
   </div>
 <% end %>

  <div class = "form-group">
    <%= f.label :airline %><br>
    <%= f.text_field :airline, class: "form-control"%>
  </div>
  <div class = "form-group">
    <%= f.label :date %><br>
    <%= f.date_field :date %>
  </div>
  <div class = "form-group">
    <%= f.label :origin %><br>
    <%= f.text_field :origin, class: "form-control"%>
  </div>
  <div class = "form-group">
    <%= f.label :destination %><br>
    <%= f.text_field :destination, class: "form-control" %>
  </div>
  <div class = "form-group">
    <%= f.label :review %><br>
    <%= f.text_area :review, class: "form-control"%>
  </div>

  <div class="actions"><br>
    <%= f.submit class: "btn btn-primary" %>
  </div>
  <% end %>