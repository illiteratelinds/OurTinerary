<div class="row">
  <div class="col-md-6">
    <h3>Select Restaurant</h3>
     <%= form_for [@itinerary, @restaurant] do |f| %>
      <div class = "form-group">
        <%= f.label :name %><br>
        <%= f.collection_select(:id, Restaurant.all, :id, :name, :include_blank => true)%>
      </div>
      <div class = "form-group">
        <%= label_tag :date %><br>
        <%= select_date Date.current %>
      </div>
      <div class = "actions"><br>
        <%= f.submit "Add Restaurant", class: "btn btn-primary" %>
      </div>
     <% end %>  

  </div>

  <div class="col-md-6">
  <h3>Add a Restaurant to Your Itinerary</h3>
    <%= form_for [@itinerary, @restaurant] do |f| %>
      <div class = "form-group">
        <%= f.label :name %><br>
        <%= f.text_field :name, class: "form-control"%><br>
      </div>
      <div class = "form-group">
        <%= f.label :address %><br>
        <%= f.text_field :address, class: "form-control"%><br>
      </div>
      <div class = "form-group">
        <%= label_tag :date %><br>
        <%= select_date Date.current%>
      </div>
      <div class = "actions"><br>
        <%= f.submit "Add Restaurant", class: "btn btn-primary" %>
      </div>
    <% end %>  
  </div>
</div>