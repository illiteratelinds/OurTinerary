<p id="notice"><%= notice %></p>
<div class="row">
  <div class="col-md-4">
    <h2><%=@user.name%></h2>
    <%= image_tag @user.avatar.url(:medium) %><br>
    User since: <%= @user.created_at.strftime("%B %d, %Y") %><br><br>
    <% unless current_user == @user %>
      <%= button_to "Add Friend", friendships_path(:friend_id => @user), :method => :post, class: "btn btn-primary" %>
    <% end %>
  </div>
  <div class="col-md-8">
    <h2>My Itineraries:</h2>
    <ul>
    <% @user.itineraries.each do |itinerary| %>
      <li><h3><%= link_to itinerary.title, itinerary_path(itinerary) %></h3></li>
    <% end %>
    </ul>
    <br><br>
  </div>
</div>
<br><br><br><br><br><br><br>
  <h4>Friends</h4>
    <ul>
        <% @user.friends.each do |friend| %>
        <li>
          <%= friend.name %> 
          <% if current_user == @user %>
            <%= link_to "Remove", friendship_path(:id => friend), :method => :delete %>
          <% end %>
        </li>
      <% end %>
    </ul>
<br><br><br><br>
    <% if current_user == @user %>
        <h4>Friend Requests</h4>
        <ul>
            <% @user.requested_friendships.each do |request| %>
            <li>
              <%= request.name %> 
              <%= link_to "Accept", friendship_path(:id => request), :method => "put" %> 
              <%= link_to "Decline", friendship_path(:id => request), :method => :delete %>
            </li>
          <% end %>
        </ul>
    <% end %>


<br><br><br><br><br><%= link_to 'Back', users_path %>
